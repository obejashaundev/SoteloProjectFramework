@section scripts{
	<script>
		$(document).ready(function () {
			$("form input").prop("disabled", true)
			$("form select").prop("disabled", true)
			$('#swHabilitarEdicion').on('change', function () {
				let value = $('#swHabilitarEdicion').prop('checked')
				if (value) {
					Swal.fire({
						title: 'Atención',
						text: 'Tenga cuidado al modificar la información',
						icon: 'warning'
					})
				}
				$("form input").prop("disabled", !value)
				$("form select").prop("disabled", !value)
			})
		})
	</script>
}
