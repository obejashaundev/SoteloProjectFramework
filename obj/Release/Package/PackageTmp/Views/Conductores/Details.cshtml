@model SoteloProjectFramework.Models.ModeloExtendidoChofer

@{
	ViewBag.Title = "Detalle Chofer";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	IEnumerable<SelectListItem> lsCategoriasChofer = ViewBag.lsCategoriasChofer;
}

<div class="container d-flex justify-content-center">
	<div style="margin-top: 1vh; border-radius: 40px; background: rgba(39, 60, 117,0.9);">
		<div class="bg-light w-100" style="margin-left: 1vw; margin-top: 2vh; border-radius: 40px;">
			<div class="row justify-content-center">
				<div class="col-md-10">
					<div class="d-flex justify-content-center">
						<h3 class="text-light rounded-pill w-75 text-center" style="background: rgba(39, 60, 117,0.9);">@ViewBag.Title</h3>
					</div>
					<section id="loginForm">
						<div class="custom-control custom-switch mt-2">
							<input type="checkbox" class="custom-control-input" id="swHabilitarEdicion">
							<label class="custom-control-label" for="swHabilitarEdicion">Habilitar Edición</label>
						</div>
						<hr />
						@using (Html.BeginForm("Update", "Conductores", FormMethod.Post, new { role = "form" }))
						{
							@Html.AntiForgeryToken()
							@Html.ValidationSummary(true, "", new { @class = "text-danger" })
							<div class="form-horizontal">
								@Html.HiddenFor(model => model.Chofer.ChoferId)
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											@Html.LabelFor(model => model.Chofer.CategoriaChoferId, htmlAttributes: new { @class = "control-label col-md-2" })
											@Html.DropDownListFor(model => model.Chofer.CategoriaChoferId, lsCategoriasChofer, "-- Seleccione una opción --", new { @class = "form-control" })
											@Html.ValidationMessageFor(model => model.Chofer.CategoriaChoferId, "", new { @class = "text-danger" })
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											@Html.LabelFor(model => model.Chofer.Nombres, htmlAttributes: new { @class = "control-label col-md-2" })
											@Html.EditorFor(model => model.Chofer.Nombres, new { htmlAttributes = new { @class = "form-control" } })
											@Html.ValidationMessageFor(model => model.Chofer.Nombres, "", new { @class = "text-danger" })
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											@Html.LabelFor(model => model.Chofer.PrimerApellido, htmlAttributes: new { @class = "control-label col-md-2" })
											@Html.EditorFor(model => model.Chofer.PrimerApellido, new { htmlAttributes = new { @class = "form-control" } })
											@Html.ValidationMessageFor(model => model.Chofer.PrimerApellido, "", new { @class = "text-danger" })
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											@Html.LabelFor(model => model.Chofer.SegundoApellido, htmlAttributes: new { @class = "control-label col-md-2" })
