                    </div>
                </div>

                <div class="form-group row">
                    <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label">Asunto</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Descripcion" rows="3"></textarea>
                </div>

                <div class="row justify-content-end">
                    <div class="col-sm-4">
                        <button class="btn btn-primary" type="button"><i class="fa-solid fa-paper-plane"></i> Enviar</button>
                    </div>
                </div>

            </form>





        </div>
    </div>



</div>



       
        



    





 





